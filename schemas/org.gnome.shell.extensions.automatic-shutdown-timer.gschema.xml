<?xml version="1.0" encoding="UTF-8"?>
<!-- after every change of this file setting schema needs to be recompiled with:
sudo glib-compile-schemas schemas -->
<schemalist gettext-domain="ShutdownTimer">
  <schema path="/org/gnome/shell/extensions/automatic-shutdown-timer/" id="org.gnome.shell.extensions.automatic-shutdown-timer">

    <key type="i" name="hours-value">
      <default>0</default>
      <summary>Hours</summary>
      <description>Set time value in hours. Range 0 to 60.</description>
    </key>

    <key type="i" name="minutes-value">
      <default>0</default>
      <summary>Minutes</summary>
      <description>Set time value in minutes. Range 0 to 60.</description>
    </key>

    <key type="i" name="seconds-value">
      <default>0</default>
      <summary>Seconds</summary>
      <description>Set time value in seconds. Range 0 to 60.</description>
    </key>

    <key type="i" name="action">
      <default>0</default>
      <summary>Action</summary>
      <description>Choose action, Shutdown=0, Reboot=1, Suspend=2</description>
    </key>

    <key type="i" name="position">
      <default>2</default>
      <summary>Position</summary>
      <description>Applet position in gnome panel Left=0, Middle=1, Right=2</description>
    </key>

    <key type="i" name="timer">
      <default>0</default>
      <summary>Timer</summary>
      <description>Choose whether the action is made on time or after time</description>
    </key>

    <key type="b" name="timer-start">
      <default>false</default>
      <summary>Start timer</summary>
      <description>Start new timer</description>
    </key>

    <key type="b" name="notifications">
      <default>true</default>
      <summary>Turn notification on/off</summary>
      <description>Turn notification on/off</description>
    </key>

    <key type="b" name="hide-time">
      <default>false</default>
      <summary>Hide Time</summary>
      <description>Hide time when timer is not active/show only icon</description>
    </key>

    <key type="as" name="shortcut-start">
      <default><![CDATA[['<Ctrl><Shift>Space']]]></default>
      <summary>Start/Pause shutdown timer</summary>
      <description>Start/Pause timer</description>
    </key>

    <key type="as" name="shortcut-option">
      <default><![CDATA[['<Ctrl><Shift>Q']]]></default>
      <summary>Start/Pause timer</summary>
      <description>Start/Pause timer</description>
    </key>

    <key type="as" name="shortcut-restart">
      <default><![CDATA[['<Ctrl><Shift>R']]]></default>
      <summary>Restart last configured timer timer</summary>
      <description>Restart timer</description>
    </key>

  </schema>
</schemalist>
